# /etc/systemd/system/cnc-telemetry.service
# Copiar este arquivo e ajustar caminhos/usu√°rio antes de habilitar.

[Unit]
Description=CNC Telemetry API (FastAPI + Uvicorn)
After=network.target

[Service]
User=cnc
Group=cnc
WorkingDirectory=/opt/cnc-telemetry-main/backend
EnvironmentFile=/opt/cnc-telemetry-main/backend/.env.beta
ExecStart=/opt/cnc-telemetry-main/backend/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
